%h2 Sign up
= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
  .row
    .col-md-12
      = render "devise/shared/error_messages", resource: resource
      .field
        = f.label :email
        = f.email_field :email, autofocus: true, autocomplete: "email", class: 'form-control', required: true
      .field
        = f.label :username
        = f.text_field :username, autocomplete: "username", class: 'form-control', required: true
      .field
        = f.label :forename
        = f.text_field :forename, autocomplete: "forename", class: 'form-control', required: true
      .field
        = f.label :surname
        = f.text_field :surname, autocomplete: "surname", class: 'form-control', required: true
      .field
        = f.label :password
        - if @minimum_password_length
          %em
            (#{@minimum_password_length} characters minimum)
        = f.password_field :password, autocomplete: "new-password", class: 'form-control', required: true
      .field
        = f.label :password_confirmation
        = f.password_field :password_confirmation, autocomplete: "new-password", class: 'form-control', required: true
  .row{style:'margin-top:1em;'}
    .col-md-12.actions
      = f.submit "Sign up", class: 'btn btn-primary'
      = render "devise/shared/links"
